               FontSize="12px" FontWeight="Bold" VerticalAlignment="Center" Height="24" Margin="0,0,0,2">
        </Label>
        <TextBox Grid.Row="3" BorderThickness="3px" BorderBrush="Black" Margin="5,0,0,0"/>



        <Label Grid.Row="4" Content="Tên đăng nhập" FontFamily="Arial" 
               FontSize="12px" FontWeight="Bold" VerticalAlignment="Center" Height="24" Margin="0,2,0,0"  >
        </Label>

        <TextBox Grid.Row="5" BorderThickness="3px" BorderBrush="Black" Margin="5,0,0,0">
        </TextBox>
        <Label Grid.Row="6" Content="Email" FontFamily="Arial" 
               FontSize="12px" FontWeight="Bold" VerticalAlignment="Center" Height="24" Margin="0,0,0,1"  >
        </Label>

        <TextBox Grid.Row="7" BorderThickness="3px" BorderBrush="Black" Margin="5,0,0,0">
        </TextBox>
        <Label Grid.Row="8" Content="Mật khẩu" FontFamily="Arial" 
               FontSize="12px" FontWeight="Bold" VerticalAlignment="Center" Height="24" Margin="0,0,0,2"  >
        </Label>

        <TextBox Grid.Row="9" BorderThickness="3px" BorderBrush="Black" Margin="5,0,0,0">
        </TextBox>
        <Label Grid.Row="10" Content="Nhập lại mật khẩu" FontFamily="Arial" 
               FontSize="12px" FontWeight="Bold" VerticalAlignment="Center" Height="24" Margin="0,1,0,2"  >
        </Label>

        <TextBox Grid.Row="11" BorderThickness="3px" BorderBrush="Black" Margin="5,0,0,0">
        </TextBox>

        <Button Grid.Row="13" Margin="100,1,100,0" Background="Black" Content="Đăng ký" Foreground="white" FontFamily="Arial" FontSize="18px"/>

        <Label Grid.Row="14"  FontFamily="Arial" 
               FontSize="12px" FontWeight="Bold" HorizontalAlignment="Center" Margin="116,2" Width="100">
            <TextBlock Text="Đã có tài khoản" TextDecorations="Underline" Cursor="Hand"></TextBlock>
        </Label>


    </Grid>
